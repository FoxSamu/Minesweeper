<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#26a69a">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/tutorial_header_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#ffffffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="30sp"/>

        <net.rgsw.minesweeper.tutorial.TutorialCanvasLegacy
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tutorialCanvas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <TextView
                android:text="@string/tutorial_content_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tutorialCanvas"
                />

        <Button
                android:text="@string/tutorial_try"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tut_try"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffffff"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:onClick="tryone"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="32dp"/>

        <Button
                android:text="@string/tutorial_to_menu"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:id="@+id/tut_menu"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffffff"
                android:onClick="skip"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>